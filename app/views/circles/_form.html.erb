<%= form_with(model: @circle, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @circle %>

      <%= f.label :name,'サークル名' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password,'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワード入力確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :genre_id,'ジャンル' %>
      <%= f.select :genre_id, 
        {'テニス':0,        'ダンス':1,      'イベント系':2,     '軽音':3,
         'ボランティア':4,   'サッカー':5,     'フットサル':6,    '野球':7,
         'バスケ':8,        'バレーボール':9,  'チア':10,        'スキー':11,
         'バドミントン':12,  'スキューバ':13,   'ハンドボール':14, 'バレエ':15,
         '合気道':16,       'スノボ':17,      'クリケット':18,   '陸上':19,
         'ラケットボール':20, '総合格闘技':21,  '合唱':22,        '器楽':23,
         '伝統芸能':24,      '芸能文化':25,    'メディア':26,     '写真':27,
         '映像':28,         '社会科学研究':29, '応援団':30,      '文化系その他':31,
         '芸術':32,         '自然科学研究':33, '人文科学研究':34, '表現':35,  'DJ':36},
         {include_blank:'選択してください'},{class:'form-control',required: true} %>

      <%= f.label :category,'カテゴリー' %>
      <%= f.select :category, 
        {スポーツ系':'スポーツ系','文化系':'文化系',
        {include_blank:'選択してください'},
        {class:'form-control',required: true} %>

      <%= f.label :place,'活動場所(部室の場所)' %>
      <%= f.text_field :place, class: 'form-control'  %>

      <%= f.label :frequency,'活動頻度' %>
      <%= f.text_field :frequency, class: 'form-control'  %>

      <%= f.label :sex,'男女比率'%>
      <%= f.select :sex,
        {'男:女=0:10':0,'男:女=1:9':1,'男:女=2:8':2,'男:女=3:7':3, 
         '男:女=4:6':4, '男:女=5:5':5,'男:女=6:4':6,'男:女=7:3':7,
         '男:女=8:2':8, '男:女=9:1':9,'男:女=10:0':10},
         {include_blank:'選択してください'},
         {class:'form-control',required:true} %>

      <%= f.label :introduction,'サークル紹介文' %>
      <%= f.text_field :introduction, class: 'form-control'  %>

      <%= f.label :event,'新歓イベント情報' %>
      <%= f.text_field :event, class: 'form-control'  %>

      <%= f.label :sns,'外部SNSへのリンク' %>
      <%= f.text_field :sns, class: 'form-control'  %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>